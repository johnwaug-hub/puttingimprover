{
  "name": "PuttingImprover",
  "displayName": "Putting Improver",
  "expo": {
    "name": "Putting Improver",
    "slug": "putting-improver",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFE4B5"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lockjaw.puttingimprover",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Putting Improver to access your camera to take profile pictures.",
        "NSPhotoLibraryUsageDescription": "Allow Putting Improver to access your photo library to choose profile pictures.",
        "NSLocationWhenInUseUsageDescription": "Allow Putting Improver to access your location to find nearby disc golf courses."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#FFE4B5"
      },
      "package": "com.lockjaw.puttingimprover",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      [
        "@react-native-firebase/app",
        {
          "ios": {
            "googleServicesFile": "./GoogleService-Info.plist"
          },
          "android": {
            "googleServicesFile": "./google-services.json"
          }
        }
      ]
    ]
  }
}
